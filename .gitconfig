[user]
  name = y@su
  email = toyasyu@gmail.com
[core]
  editor = vim
  excludesfile = ~/.gitignore_global
[color]
  ui = auto
[alias]
  co = checkout
  ci = commit
  st = status
  br = branch --sort=authordate --format='%(authordate:short) %(refname)'
  h = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  g = grep
  pfwl = push --force-with-lease
[pull]
  rebase = true
[fetch]
  prune = true
[ghq]
  root = ~/.ghq
